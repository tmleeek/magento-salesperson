<?xml version="1.0"?>
<config>
    <modules>
        <Codeproper_Salesperson>
            <version>1.0.0</version>
        </Codeproper_Salesperson>
    </modules>

    <global>
        <helpers>
            <codeproper_salesperson>
                <class>Codeproper_Salesperson_Helper</class>
            </codeproper_salesperson>
        </helpers>

        <blocks>
            <codeproper_salesperson>
                <class>Codeproper_Salesperson_Block</class>
            </codeproper_salesperson>
        </blocks>

        <resources>
            <codeproper_salesperson_setup>
                <setup>
                    <module>Codeproper_Salesperson</module>
                    <class>Codeproper_Salesperson_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </codeproper_salesperson_setup>
            <codeproper_salesperson_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </codeproper_salesperson_write>
            <codeproper_salesperson_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </codeproper_salesperson_read>
        </resources>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <codeproper_salesperson>
                    <file>codeproper_salesperson.xml</file>
                </codeproper_salesperson>
            </updates>
        </layout>
        <events>
            <sales_order_place_before>
                <observers>
                    <add_event>
                        <type>singleton</type>
                        <class>Codeproper_Salesperson_Model_Observer</class>
                        <method>salesOrderPlaceBefore</method>
                    </add_event>
                </observers>
            </sales_order_place_before>
        </events>
    </adminhtml>
</config>
